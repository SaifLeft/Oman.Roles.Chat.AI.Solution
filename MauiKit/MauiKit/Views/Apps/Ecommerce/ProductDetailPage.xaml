<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiKit.Views.Ecommerce.ProductDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView"
    xmlns:controls="clr-namespace:MauiKit.Controls"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:views="clr-namespace:MauiKit.Views"
    BaseTitle="{localization:Translate PageTitleProductDetail}"
    BaseTitleColor="{DynamicResource BaseTextColor}"
    NavigationPage.HasNavigationBar="False">

    <views:BasePage.PageContent>
        <Grid>
            <ScrollView Scrolled="ScrollView_Scrolled">
                <StackLayout IsClippedToBounds="True">
                    <!--  PRODUCT GALLERY  -->
                    <VerticalStackLayout>
                        <Border
                            Margin="-2"
                            Stroke="{StaticResource DefaultBorder}"
                            StrokeThickness="0">
                            <Border.Shadow>
                                <Shadow Opacity="0.1" />
                            </Border.Shadow>
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="0,0,46,46" />
                            </Border.StrokeShape>

                            <cards:CarouselView
                                HeightRequest="{OnIdiom Phone=400,
                                                        Tablet=500,
                                                        Desktop=600}"
                                IndicatorView="IndicatorView"
                                IsCyclical="True"
                                IsPanSwipeEnabled="True"
                                IsUserInteractionEnabled="True"
                                IsViewReusingEnabled="True"
                                ItemsSource="{Binding ProductDetail.ImageUrls}">

                                <cards:CarouselView.ItemTemplate>
                                    <DataTemplate x:DataType="x:String">
                                        <Image Aspect="AspectFill" Source="{Binding .}" />
                                    </DataTemplate>
                                </cards:CarouselView.ItemTemplate>
                            </cards:CarouselView>
                        </Border>


                        <IndicatorView
                            x:Name="IndicatorView"
                            Margin="0,20,0,10"
                            HorizontalOptions="Center"
                            IndicatorColor="{StaticResource BaseLightTextColor}"
                            IndicatorsShape="Square"
                            SelectedIndicatorColor="{DynamicResource PrimaryColor}"
                            VerticalOptions="End" />
                    </VerticalStackLayout>

                    <StackLayout Margin="20,16">
                        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="15">
                            <Label
                                FontSize="15"
                                HorizontalOptions="Start"
                                Text="{Binding ProductDetail.BrandName}"
                                TextColor="{DynamicResource BaseTextColor}"
                                VerticalOptions="Center" />

                            <Label
                                Grid.Column="1"
                                FontFamily="IonIcons"
                                FontSize="25"
                                HorizontalOptions="Center"
                                Text="{x:Static views:IonIcons.AndroidFavorite}"
                                TextColor="{Binding FavStatusColor}"
                                VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TapFavCommand}" CommandParameter="{Binding FavStatusColor}" />
                                </Label.GestureRecognizers>
                            </Label>

                            <Label
                                Grid.Column="2"
                                FontFamily="MaterialDesign"
                                FontSize="25"
                                HorizontalOptions="Center"
                                Text="{x:Static views:MaterialDesignIcons.Share}"
                                TextColor="{DynamicResource BaseIconColor}"
                                VerticalOptions="Center">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer />
                                </Label.GestureRecognizers>
                            </Label>
                        </Grid>
                        <Label
                            FontSize="20"
                            HorizontalOptions="StartAndExpand"
                            Style="{StaticResource Title1}"
                            Text="{Binding ProductDetail.Name}"
                            VerticalTextAlignment="Center" />

                        <!--  SIZE AND COLOR OPTIONS  -->
                        <StackLayout
                            Margin="0,16"
                            HorizontalOptions="FillAndExpand"
                            Spacing="5">
                            <Label
                                FontSize="15"
                                HorizontalOptions="Start"
                                Text="{localization:Translate LabelSelectSize}"
                                TextColor="{DynamicResource BaseTextColor}" />

                            <CollectionView
                                HeightRequest="40"
                                ItemsSource="{Binding ProductDetail.Sizes}"
                                SelectionMode="Single">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Padding="15,0"
                                            BackgroundColor="{DynamicResource Primary10Color}"
                                            HeightRequest="40"
                                            MinimumWidthRequest="40"
                                            Stroke="Transparent">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="8" />
                                            </Border.StrokeShape>
                                            <Label
                                                FontFamily="SemiBoldFont"
                                                FontSize="14"
                                                HorizontalOptions="Center"
                                                Text="{Binding .}"
                                                TextColor="{DynamicResource BaseTextColor}"
                                                VerticalOptions="Center"
                                                VerticalTextAlignment="Center" />

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroupList>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal" />
                                                        <VisualState x:Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="{DynamicResource PrimaryColor}" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateGroupList>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                            <Label
                                Margin="0,10,0,0"
                                FontSize="15"
                                HorizontalOptions="StartAndExpand"
                                Text="{localization:Translate LabelSelectColor}"
                                TextColor="{DynamicResource BaseTextColor}"
                                VerticalTextAlignment="Center" />

                            <CollectionView
                                HeightRequest="40"
                                ItemsSource="{Binding ProductDetail.ColorLists}"
                                SelectionMode="Single">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            Margin="2"
                                            Padding="2"
                                            HeightRequest="30"
                                            HorizontalOptions="CenterAndExpand"
                                            StrokeThickness="2"
                                            WidthRequest="30">
                                            <Border.StrokeShape>
                                                <RoundRectangle CornerRadius="10" />
                                            </Border.StrokeShape>

                                            <RoundRectangle
                                                CornerRadius="8"
                                                Fill="{Binding .}"
                                                HeightRequest="26"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                WidthRequest="26" />

                                            <VisualStateManager.VisualStateGroups>
                                                <VisualStateGroupList>
                                                    <VisualStateGroup x:Name="CommonStates">
                                                        <VisualState x:Name="Normal">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                                                <Setter Property="Stroke" Value="Transparent" />
                                                                <Setter Property="HeightRequest" Value="30" />
                                                                <Setter Property="WidthRequest" Value="30" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                        <VisualState x:Name="Selected">
                                                            <VisualState.Setters>
                                                                <Setter Property="BackgroundColor" Value="{DynamicResource BasePageColor}" />
                                                                <Setter Property="Stroke" Value="{Binding .}" />
                                                                <Setter Property="HeightRequest" Value="35" />
                                                                <Setter Property="WidthRequest" Value="35" />
                                                            </VisualState.Setters>
                                                        </VisualState>
                                                    </VisualStateGroup>
                                                </VisualStateGroupList>
                                            </VisualStateManager.VisualStateGroups>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>

                            </CollectionView>
                        </StackLayout>

                        <StackLayout>

                            <Label
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="{localization:Translate LabelDetails}"
                                VerticalTextAlignment="Center" />

                            <Label
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                Text="{Binding ProductDetail.Details}"
                                VerticalTextAlignment="Center" />

                            <Label
                                Margin="0,30,0,0"
                                FontSize="18"
                                HorizontalOptions="StartAndExpand"
                                Text="{localization:Translate LabelReviews}"
                                VerticalTextAlignment="Center" />

                            <Label
                                Margin="0,5,0,0"
                                FontAttributes="Bold"
                                FontSize="14"
                                HorizontalOptions="StartAndExpand"
                                Text="{localization:Translate ButtonWriteReview}"
                                TextColor="{DynamicResource PrimaryColor}"
                                VerticalTextAlignment="Center" />
                        </StackLayout>

                        <CollectionView Margin="0,16" ItemsSource="{Binding ProductDetail.Reviews}">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout ItemSpacing="16" Orientation="Vertical" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="0"
                                        Padding="0"
                                        StrokeShape="RoundRectangle 20">
                                        <Grid
                                            Padding="20"
                                            RowDefinitions="Auto,0.8,*"
                                            RowSpacing="8">
                                            <Grid ColumnDefinitions="46,*,Auto">
                                                <Border
                                                    Padding="0"
                                                    HeightRequest="46"
                                                    StrokeShape="RoundRectangle 20"
                                                    StrokeThickness="0"
                                                    WidthRequest="40">
                                                    <Image
                                                        Aspect="AspectFill"
                                                        HeightRequest="40"
                                                        Source="{Binding ImageUrl}"
                                                        WidthRequest="40" />
                                                </Border>

                                                <StackLayout
                                                    Grid.Column="1"
                                                    Margin="8,0"
                                                    Spacing="2">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="14"
                                                        Text="{Binding Name}" />
                                                    <Label
                                                        Style="{StaticResource Footnote}"
                                                        Text="{Binding Date}"
                                                        VerticalTextAlignment="Center" />
                                                </StackLayout>

                                                <controls:Rating
                                                    Grid.Column="2"
                                                    HorizontalOptions="EndAndExpand"
                                                    Max="5"
                                                    Scale=".75"
                                                    Value="{Binding Rating}" />

                                            </Grid>

                                            <Rectangle
                                                Grid.Row="1"
                                                Margin="-20,0"
                                                Fill="{DynamicResource BaseSeparatorColor}"
                                                HeightRequest="1"
                                                VerticalOptions="Fill" />

                                            <Label
                                                Grid.Row="2"
                                                Margin="0"
                                                FontSize="14"
                                                Text="{Binding Review}"
                                                TextColor="{DynamicResource BaseTextColor}"
                                                VerticalTextAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </StackLayout>
            </ScrollView>

            <!--  Back Button  -->
            <Border
                Margin="15"
                Padding="3"
                Background="{DynamicResource BasePageColor}"
                HeightRequest="40"
                HorizontalOptions="End"
                StrokeThickness="0"
                VerticalOptions="Start"
                WidthRequest="40">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="GoBack_Tapped" />
                </Border.GestureRecognizers>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Opacity="0.3" />
                </Border.Shadow>
                <Image
                    Margin="3"
                    HorizontalOptions="Center"
                    VerticalOptions="Center">
                    <Image.Source>
                        <FontImageSource
                            FontFamily="IonIcons"
                            Glyph="{x:Static views:IonIcons.AndroidClose}"
                            Size="25"
                            Color="{DynamicResource BaseIconColor}" />
                    </Image.Source>
                </Image>
            </Border>

            <Border
                Padding="0"
                Background="{DynamicResource BasePageColor}"
                HeightRequest="80"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding IsFooterVisible}"
                StrokeShape="RoundRectangle 6,6,0,0"
                StrokeThickness="1"
                VerticalOptions="EndAndExpand">
                <StackLayout Margin="24,0" Orientation="Horizontal">
                    <StackLayout Spacing="0" VerticalOptions="CenterAndExpand">
                        <Label
                            HorizontalOptions="Start"
                            Style="{StaticResource Body}"
                            Text="{localization:Translate LabelPrice}" />
                        <Label
                            HorizontalOptions="Center"
                            Style="{StaticResource Title1}"
                            Text="{Binding ProductDetail.Price, StringFormat='{}{0:c}'}"
                            TextColor="{DynamicResource OkColor}" />
                    </StackLayout>

                    <Button
                        Padding="54,12"
                        CornerRadius="14"
                        HorizontalOptions="EndAndExpand"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Text="{localization:Translate ButtonAddToCart}"
                        VerticalOptions="CenterAndExpand" />
                </StackLayout>
            </Border>

        </Grid>
    </views:BasePage.PageContent>

</views:BasePage>