<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiKit.Views.Properties.BookingPaymentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:views="clr-namespace:MauiKit.Views">

    <views:BasePage.PageContent>
        <ScrollView>
            <StackLayout Padding="20">
                <Label
                    Margin="0,10"
                    Style="{StaticResource Title2}"
                    Text="{localization:Translate LabelChoosePaymentMethod}"
                    TextColor="{DynamicResource PrimaryColor}" />

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13,0,13"
                    StrokeShape="RoundRectangle 10">

                    <Grid ColumnDefinitions="*, Auto">
                        <HorizontalStackLayout Spacing="12">
                            <Border
                                Padding="10,5"
                                BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                                StrokeShape="{RoundRectangle CornerRadius='8'}"
                                WidthRequest="40">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="22"
                                    Source="master_card.png"
                                    VerticalOptions="Center" />
                            </Border>
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="{localization:Translate LabelCreditCard}"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <RadioButton
                            Grid.Column="1"
                            GroupName="Payment"
                            HorizontalOptions="End"
                            IsChecked="True"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13,0,13"
                    StrokeShape="RoundRectangle 10">

                    <Grid ColumnDefinitions="*, Auto">
                        <HorizontalStackLayout Spacing="12">
                            <Border
                                Padding="10,5"
                                BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                                StrokeShape="{RoundRectangle CornerRadius='8'}"
                                WidthRequest="40">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="22"
                                    Source="paypal.png"
                                    VerticalOptions="Center" />
                            </Border>
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Paypal"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <RadioButton
                            Grid.Column="1"
                            GroupName="Payment"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13,0,13"
                    StrokeShape="RoundRectangle 10">

                    <Grid ColumnDefinitions="*, Auto">
                        <HorizontalStackLayout Spacing="12">
                            <Border
                                Padding="10,5"
                                BackgroundColor="{DynamicResource MainWrapperBackgroundColor}"
                                StrokeShape="{RoundRectangle CornerRadius='8'}"
                                WidthRequest="40">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="22"
                                    Source="google.png"
                                    VerticalOptions="Center" />
                            </Border>
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Google Pay"
                                VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <RadioButton
                            Grid.Column="1"
                            GroupName="Payment"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                    </Grid>
                </Border>

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13,0,13"
                    Stroke="{DynamicResource FrameBorder}"
                    StrokeDashArray="2,2"
                    StrokeShape="{RoundRectangle CornerRadius='10'}"
                    StrokeThickness="1">

                    <StackLayout
                        HorizontalOptions="Center"
                        Orientation="Horizontal"
                        Spacing="12">
                        <Border
                            Padding="10,5"
                            Background="{DynamicResource MainWrapperBackgroundColor}"
                            StrokeShape="{RoundRectangle CornerRadius='6'}"
                            WidthRequest="40">
                            <Image HeightRequest="22">
                                <Image.Source>
                                    <FontImageSource
                                        FontFamily="MaterialDesign"
                                        Glyph="{x:Static views:MaterialDesignIcons.Add}"
                                        Color="{DynamicResource BaseIconColor}" />
                                </Image.Source>
                            </Image>
                        </Border>
                        <Label
                            FontAttributes="Bold"
                            FontSize="16"
                            Text="{localization:Translate LabelAddCard}"
                            VerticalOptions="Center" />
                    </StackLayout>
                </Border>

                <Label
                    Margin="0,20,0,0"
                    FontAttributes="Bold"
                    FontSize="18"
                    Text="{localization:Translate LabelHistory}" />

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13"
                    HeightRequest="80"
                    StrokeShape="{RoundRectangle CornerRadius='10'}">

                    <Grid ColumnDefinitions="*, Auto">
                        <StackLayout Orientation="Horizontal" Spacing="12">
                            <Border
                                Padding="0"
                                Background="{DynamicResource MainWrapperBackgroundColor}"
                                HeightRequest="60"
                                StrokeShape="{RoundRectangle CornerRadius='10'}"
                                WidthRequest="60">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="60"
                                    Source="https://raw.githubusercontent.com/tlssoftware/raw-material/master/maui-kit/real-estate/exterior1.jpg"
                                    VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Nocoa Apartment"
                                    VerticalOptions="Center" />
                                <Border
                                    Padding="5,0"
                                    Background="{DynamicResource Primary10Color}"
                                    HorizontalOptions="Start"
                                    StrokeShape="{RoundRectangle CornerRadius='5'}"
                                    VerticalOptions="Center">
                                    <HorizontalStackLayout Spacing="3">
                                        <Label
                                            FontFamily="MaterialDesign"
                                            FontSize="14"
                                            Text="{x:Static views:MaterialDesignIcons.CheckCircle}"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="Center" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            Text="Paid"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="End" />
                                    </HorizontalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </StackLayout>

                        <HorizontalStackLayout
                            Grid.Column="1"
                            Spacing="1"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Start"
                                Text="$1599"
                                TextColor="{DynamicResource PrimaryColor}"
                                VerticalOptions="End" />
                            <Label
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="/mo"
                                TextColor="{DynamicResource BaseLightTextColor}"
                                VerticalOptions="End" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13"
                    HeightRequest="80"
                    StrokeShape="{RoundRectangle CornerRadius='16'}">

                    <Grid ColumnDefinitions="*, Auto">
                        <HorizontalStackLayout Spacing="12">
                            <Border
                                Padding="0"
                                Background="{DynamicResource MainWrapperBackgroundColor}"
                                HeightRequest="60"
                                StrokeShape="{RoundRectangle CornerRadius='10'}"
                                WidthRequest="60">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="60"
                                    Source="https://raw.githubusercontent.com/tlssoftware/raw-material/master/maui-kit/real-estate/livingroom1.jpg"
                                    VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Narcy Apartment"
                                    VerticalOptions="Center" />
                                <Border
                                    Padding="5,0"
                                    Background="{DynamicResource Primary10Color}"
                                    HorizontalOptions="Start"
                                    StrokeShape="{RoundRectangle CornerRadius='5'}"
                                    VerticalOptions="Center">
                                    <HorizontalStackLayout Spacing="3">
                                        <Label
                                            FontFamily="MaterialDesign"
                                            FontSize="14"
                                            Text="{x:Static views:MaterialDesignIcons.CheckCircle}"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="Center" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            Text="Paid"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="End" />
                                    </HorizontalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout
                            Grid.Column="1"
                            Spacing="1"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Start"
                                Text="$950"
                                TextColor="{DynamicResource PrimaryColor}"
                                VerticalOptions="End" />
                            <Label
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="/mo"
                                TextColor="{DynamicResource BaseLightTextColor}"
                                VerticalOptions="End" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <Border
                    Margin="0,10,0,5"
                    Padding="16,13"
                    HeightRequest="80"
                    StrokeShape="{RoundRectangle CornerRadius='16'}">

                    <Grid ColumnDefinitions="*, Auto">
                        <HorizontalStackLayout Spacing="12">
                            <Border
                                Padding="0"
                                Background="{DynamicResource MainWrapperBackgroundColor}"
                                HeightRequest="60"
                                StrokeShape="{RoundRectangle CornerRadius='10'}"
                                WidthRequest="60">
                                <Image
                                    Aspect="AspectFit"
                                    HeightRequest="60"
                                    Source="https://raw.githubusercontent.com/tlssoftware/raw-material/master/maui-kit/real-estate/exterior2.jpg"
                                    VerticalOptions="Center" />
                            </Border>
                            <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    Text="Duplex Apartment"
                                    VerticalOptions="Center" />
                                <Border
                                    Padding="5,0"
                                    Background="{DynamicResource Primary10Color}"
                                    HorizontalOptions="Start"
                                    StrokeShape="{RoundRectangle CornerRadius='5'}"
                                    VerticalOptions="Center">
                                    <HorizontalStackLayout Spacing="3">
                                        <Label
                                            FontFamily="MaterialDesign"
                                            FontSize="14"
                                            Text="{x:Static views:MaterialDesignIcons.CheckCircle}"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="Center" />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="11"
                                            Text="Paid"
                                            TextColor="{DynamicResource PrimaryColor}"
                                            VerticalOptions="End" />
                                    </HorizontalStackLayout>
                                </Border>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout
                            Grid.Column="1"
                            Spacing="1"
                            VerticalOptions="Center">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalOptions="Start"
                                Text="$750"
                                TextColor="{DynamicResource PrimaryColor}"
                                VerticalOptions="End" />
                            <Label
                                FontSize="14"
                                HorizontalOptions="Start"
                                Text="/mo"
                                TextColor="{DynamicResource BaseLightTextColor}"
                                VerticalOptions="End" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <Button
                    Margin="0,20"
                    BackgroundColor="{DynamicResource PrimaryColor}"
                    CornerRadius="14"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    Text="{localization:Translate ButtonOk}" />
            </StackLayout>
        </ScrollView>
    </views:BasePage.PageContent>

</views:BasePage>