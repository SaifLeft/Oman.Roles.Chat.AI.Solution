<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiKit.Views.Articles.VideoDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MauiKit.Controls"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:MauiKit.Views">

    <views:BasePage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{DynamicResource MainWrapperBackgroundColor}" StatusBarStyle="DarkContent" />
    </views:BasePage.Behaviors>

    <views:BasePage.PageContent>
        <Grid BackgroundColor="{DynamicResource Black}">

            <toolkit:MediaElement
                x:Name="mediaPlayer"
                Aspect="Center"
                ShouldAutoPlay="True"
                ShouldLoopPlayback="True"
                ShouldShowPlaybackControls="True"
                Source="https://raw.githubusercontent.com/tlssoftware/raw-material/master/maui-kit/videos/video_bg_1.mp4" />

        </Grid>
    </views:BasePage.PageContent>


</views:BasePage>
