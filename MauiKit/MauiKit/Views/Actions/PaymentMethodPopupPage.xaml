<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage
    x:Class="MauiKit.Views.Actions.PaymentMethodPopupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:RGPopup.Maui.Animations;assembly=RGPopup.Maui"
    xmlns:controls="clr-namespace:MauiKit.Controls"
    xmlns:handlers="clr-namespace:MauiKit.Handlers"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui"
    CloseWhenBackgroundIsClicked="False">

    <rg:PopupPage.Animation>
        <animation:MoveAnimation PositionIn="Bottom" PositionOut="Bottom" />
    </rg:PopupPage.Animation>

    <Grid VerticalOptions="End">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnIdiom Desktop='600', Default='*'}" />
        </Grid.ColumnDefinitions>

        <Border
            Background="{DynamicResource MainWrapperBackgroundColor}"
            HorizontalOptions="{OnIdiom Phone='Fill',
                                        Default='Center'}"
            VerticalOptions="{OnIdiom Phone='End',
                                      Tablet='End',
                                      Desktop='End'}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0" />
            </Border.StrokeShape>

            <ScrollView VerticalScrollBarVisibility="Never">
                <StackLayout
                    Padding="20,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="End">

                    <Label
                        Margin="0,20"
                        FontSize="20"
                        HorizontalOptions="Center"
                        Style="{StaticResource Title2}"
                        Text="{localization:Translate LabelPaymentMethod}" />

                    <Border
                        Margin="0,10"
                        Padding="10"
                        Background="{DynamicResource MainWrapperBackgroundColor}"
                        StrokeShape="{RoundRectangle CornerRadius='14'}">
                        <StackLayout>
                            <RadioButton
                                x:Name="payPal"
                                BorderColor="Transparent"
                                Content="PayPal"
                                GroupName="Payment"
                                VerticalOptions="Center" />

                            <Label Margin="10,10,10,20" IsVisible="False">
                                <Label.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Source={x:Reference payPal}, Path=IsChecked}"
                                        TargetType="Label"
                                        Value="True">
                                        <Setter Property="IsVisible" Value="True" />
                                    </DataTrigger>
                                </Label.Triggers>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="PayPal ID:" />
                                        <Span Text=" " />
                                        <Span Text="maui@paypal.com" TextColor="{DynamicResource PrimaryColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </Border>

                    <Border
                        Margin="0,10"
                        Padding="10"
                        Background="{DynamicResource MainWrapperBackgroundColor}"
                        StrokeShape="{RoundRectangle CornerRadius='14'}"
                        VerticalOptions="Center">
                        <StackLayout>
                            <RadioButton
                                x:Name="creditCard"
                                Content="Credit Card"
                                GroupName="Payment"
                                VerticalOptions="Center" />

                            <Grid
                                x:Name="creditCardGrid"
                                Margin="0,10"
                                ColumnDefinitions="0.65*, 0.35*"
                                ColumnSpacing="12"
                                RowDefinitions="Auto,Auto,Auto,Auto"
                                RowSpacing="16">
                                <Grid.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Source={x:Reference creditCard}, Path=IsChecked}"
                                        TargetType="Grid"
                                        Value="True">
                                        <Setter Property="IsEnabled" Value="True" />
                                    </DataTrigger>
                                </Grid.Triggers>

                                <Border
                                    Grid.ColumnSpan="2"
                                    Padding="20,5"
                                    Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                                    <handlers:BorderlessEntry
                                        HeightRequest="42"
                                        Keyboard="Numeric"
                                        Placeholder="Card Number"
                                        PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                        TextColor="{DynamicResource BaseTextColor}" />
                                </Border>

                                <Border
                                    Grid.Row="1"
                                    Padding="20,5"
                                    Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                                    <handlers:BorderlessEntry
                                        HeightRequest="42"
                                        Keyboard="Default"
                                        Placeholder="Expired Date"
                                        PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                        TextColor="{DynamicResource BaseTextColor}" />
                                </Border>

                                <Border
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Padding="20,5"
                                    Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                                    <handlers:BorderlessEntry
                                        HeightRequest="42"
                                        Keyboard="Numeric"
                                        Placeholder="CVV"
                                        PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                        TextColor="{DynamicResource BaseTextColor}" />
                                </Border>

                            </Grid>
                        </StackLayout>
                    </Border>

                    <Border
                        Margin="0,10"
                        Padding="10"
                        Background="{DynamicResource MainWrapperBackgroundColor}"
                        StrokeShape="{RoundRectangle CornerRadius='14'}">
                        <StackLayout>
                            <RadioButton
                                x:Name="cod"
                                Content="Cash On Delivery"
                                GroupName="Payment"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Border>

                    <Button
                        Margin="0,20"
                        Clicked="OKButton_Clicked"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Text="{localization:Translate LabelOk}" />
                </StackLayout>
            </ScrollView>

        </Border>
    </Grid>
</rg:PopupPage>