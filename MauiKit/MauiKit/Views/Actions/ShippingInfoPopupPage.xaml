<?xml version="1.0" encoding="utf-8" ?>
<rg:PopupPage
    x:Class="MauiKit.Views.Actions.ShippingInfoPopupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animation="clr-namespace:RGPopup.Maui.Animations;assembly=RGPopup.Maui"
    xmlns:controls="clr-namespace:MauiKit.Controls"
    xmlns:handlers="clr-namespace:MauiKit.Handlers"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:rg="clr-namespace:RGPopup.Maui.Pages;assembly=RGPopup.Maui">

    <rg:PopupPage.Animation>
        <animation:MoveAnimation PositionIn="Bottom" PositionOut="Bottom" />
    </rg:PopupPage.Animation>

    <Grid
        Margin="0,100,0,0"
        HorizontalOptions="{OnIdiom Phone='Fill',
                                    Default='Center'}"
        VerticalOptions="{OnIdiom Phone='End',
                                  Tablet='End',
                                  Desktop='End'}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{OnIdiom Desktop='600', Default='*'}" />
        </Grid.ColumnDefinitions>

        <Border Background="{DynamicResource MainWrapperBackgroundColor}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="20,20,0,0" />
            </Border.StrokeShape>
            <Grid RowDefinitions="Auto,1,*">
                <Label
                    Margin="0,20"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Style="{StaticResource Title2}"
                    Text="{localization:Translate LabelShippingInfo}" />

                <Rectangle
                    Grid.Row="1"
                    Margin="20,0,20,10"
                    Fill="{DynamicResource BaseSeparatorColor}"
                    HeightRequest="1"
                    VerticalOptions="Fill" />

                <ScrollView
                    Grid.Row="2"
                    Margin="20,16"
                    BackgroundColor="Transparent"
                    VerticalScrollBarVisibility="Never">
                    <Grid
                        Margin="0,20"
                        ColumnDefinitions="2*, 2*"
                        ColumnSpacing="12"
                        RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                        RowSpacing="16">

                        <Border Padding="20,5" Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="First Name"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Column="1"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="Last Name"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="1"
                            Grid.ColumnSpan="2"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="Phone Number"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="2"
                            Grid.ColumnSpan="2"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="Address  Line 1"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="Address  Line 2"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="4"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="City"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="State"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="5"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="ZIP Code"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="5"
                            Grid.Column="1"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEntry
                                HeightRequest="42"
                                Placeholder="Country"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Border
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Padding="20,5"
                            Background="{DynamicResource EntryAndEditorsBackgroundColor}">
                            <handlers:BorderlessEditor
                                HeightRequest="120"
                                Placeholder="Notes"
                                PlaceholderColor="{DynamicResource BaseLightTextColor}"
                                TextColor="{DynamicResource BaseTextColor}" />
                        </Border>

                        <Button
                            Grid.Row="7"
                            Grid.ColumnSpan="2"
                            Margin="0,10"
                            BackgroundColor="{DynamicResource PrimaryColor}"
                            Clicked="SubmitButton_Clicked"
                            CornerRadius="14"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Text="{localization:Translate ButtonSubmit}"
                            TextColor="{DynamicResource White}" />
                    </Grid>
                </ScrollView>
            </Grid>

        </Border>
    </Grid>

</rg:PopupPage>