<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiKit.Views.Templates.RecentlyJoinedUserItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MauiKit.Converters"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:views="clr-namespace:MauiKit.Views">

    <VerticalStackLayout Spacing="15">
        <Grid
            Padding="0,6"
            ColumnDefinitions="40, *, Auto"
            ColumnSpacing="12">
            <!--<Border
                Padding="0"
                BackgroundColor="#EAEEF6"
                HeightRequest="50"
                HorizontalOptions="Start"
                Stroke="Transparent"
                StrokeShape="{RoundRectangle CornerRadius='25'}"
                TranslationY="0"
                VerticalOptions="Center"
                WidthRequest="50">

                <Image
                    Aspect="Fill"
                    HorizontalOptions="CenterAndExpand"
                    Source="{Binding Avatar}"
                    VerticalOptions="CenterAndExpand" />

            </Border>-->
            <toolkit:AvatarView
                CornerRadius="10"
                HeightRequest="40"
                ImageSource="{Binding Avatar}"
                VerticalOptions="Center"
                WidthRequest="40" />

            <StackLayout Grid.Column="1">
                <Label
                    FontAttributes="Bold"
                    FontSize="15"
                    Text="{Binding FullName}"
                    TextColor="{DynamicResource BaseTextColor}" />

                <Label
                    FontSize="14"
                    Text="{Binding Position}"
                    TextColor="{DynamicResource BaseLightTextColor}" />
            </StackLayout>

            <StackLayout Grid.Column="2">
                <Label
                    FontFamily="MaterialDesign"
                    FontSize="25"
                    Text="{x:Static views:MaterialDesignIcons.Comment}"
                    TextColor="{DynamicResource PrimaryColor}"
                    VerticalOptions="Center" />
            </StackLayout>

        </Grid>
    </VerticalStackLayout>
</ContentView>
