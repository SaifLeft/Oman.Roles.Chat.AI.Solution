<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MauiKit.Views.Dashboards.Templates.DashboardCardItemTemplate"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiKit.Views">
    <Border
        Margin="5"
        HeightRequest="{OnIdiom Phone='230',
                                Tablet='300',
                                Desktop='360'}"
        HorizontalOptions="{OnIdiom Phone='FillAndExpand',
                                    Tablet='CenterAndExpand',
                                    Desktop='FillAndExpand'}"
        StrokeShape="{RoundRectangle CornerRadius='16'}"
        VerticalOptions="FillAndExpand">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="{OnIdiom Phone='120', Tablet='200', Desktop='250'}" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Image
                    Aspect="{OnIdiom Phone='AspectFill',
                                     Desktop='Fill',
                                     Tablet='AspectFill'}"
                    HeightRequest="{OnIdiom Phone='120',
                                            Tablet='200',
                                            Desktop='250'}"
                    Source="{Binding BackgroundImage}" />

                <Border
                    Margin="10"
                    Padding="8,5"
                    Background="#60000000"
                    HeightRequest="28"
                    HorizontalOptions="End"
                    StrokeThickness="0"
                    VerticalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="8" />
                    </Border.StrokeShape>

                    <HorizontalStackLayout Spacing="5">
                        <Image VerticalOptions="Center">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="MaterialDesign"
                                    Glyph="{x:Static views:MaterialDesignIcons.ThumbUp}"
                                    Size="15"
                                    Color="{DynamicResource White}" />
                            </Image.Source>
                        </Image>
                        <Label
                            FontSize="13"
                            Text="{Binding Likes}"
                            TextColor="{DynamicResource OverImageTextColor}" />
                    </HorizontalStackLayout>

                </Border>
            </Grid>


            <Grid Grid.Row="1" Padding="{OnIdiom Phone='14,8', Tablet='16,10', Default='20,15'}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    FontAttributes="Bold"
                    FontSize="14"
                    LineBreakMode="WordWrap"
                    Text="{Binding Title}"
                    TextColor="{DynamicResource BaseTextColor}"
                    VerticalOptions="StartAndExpand" />

                <Grid
                    Grid.Row="1"
                    ColumnSpacing="6"
                    VerticalOptions="End">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        Text="{Binding Section}"
                        TextColor="{Binding SectionColor}"
                        VerticalOptions="End" />

                    <Image
                        Grid.Column="1"
                        HeightRequest="40"
                        Source="{Binding Avatar}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</ContentView>
