<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage
    x:Class="MauiKit.Views.Dashboards.DashboardCarouselPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localization="clr-namespace:MauiKit.Resources.Translations"
    xmlns:menuItems="clr-namespace:MauiKit.Models"
    xmlns:templates="clr-namespace:MauiKit.Views.Dashboards.Templates"
    xmlns:viewmodels="clr-namespace:MauiKit.ViewModels.Dashboards"
    xmlns:views="clr-namespace:MauiKit.Views"
    BaseTitle="{localization:Translate PageTitleDashboardCarousel}"
    BaseTitleColor="{DynamicResource BaseTextColor}">

    <views:BasePage.BindingContext>
        <viewmodels:DashboardCarouselViewModel />
    </views:BasePage.BindingContext>

    <views:BasePage.Resources>
        <Style TargetType="Border">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="Background" Value="Transparent" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </views:BasePage.Resources>

    <views:BasePage.PageContent>
        <Grid Padding="0" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="{OnIdiom Phone=320, Tablet=430, Desktop=500}" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Margin="-3,-1,-3,0"
                Padding="10"
                Background="{DynamicResource BasePageColor}"
                StrokeThickness="0">
                <VerticalStackLayout>
                    <CarouselView
                        x:Name="carouselView"
                        HeightRequest="{OnIdiom Phone='260',
                                                Tablet='400',
                                                Desktop='450'}"
                        IndicatorView="indicatorView"
                        IsBounceEnabled="False"
                        IsScrollAnimated="True"
                        IsSwipeEnabled="True"
                        ItemsSource="{Binding BannerItems}"
                        PeekAreaInsets="0"
                        Position="{Binding Position}">
                        <CarouselView.ItemsLayout>
                            <LinearItemsLayout
                                Orientation="Horizontal"
                                SnapPointsAlignment="Center"
                                SnapPointsType="MandatorySingle" />
                        </CarouselView.ItemsLayout>
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="20,5,20,15"
                                    Padding="0"
                                    Background="{Binding BackgroundColor}"
                                    MinimumHeightRequest="{OnIdiom Phone='260',
                                                                   Tablet='400',
                                                                   Desktop='400'}"
                                    StrokeShape="RoundRectangle 30">
                                    <Grid>
                                        <Image
                                            Aspect="AspectFill"
                                            Opacity="0.3"
                                            Source="{OnIdiom Phone='main_bg.png',
                                                             Tablet='main_bg.png',
                                                             Desktop='main_bg_desktop.png'}" />

                                        <Grid
                                            Padding="30"
                                            HeightRequest="{OnIdiom Phone='260',
                                                                    Tablet='400',
                                                                    Desktop='400'}"
                                            RowDefinitions="80, Auto, *"
                                            RowSpacing="20">
                                            <Border
                                                Padding="12"
                                                Background="#80000000"
                                                HeightRequest="54"
                                                HorizontalOptions="Start"
                                                Stroke="Transparent"
                                                StrokeShape="{RoundRectangle CornerRadius='14'}"
                                                VerticalOptions="Start"
                                                WidthRequest="54">
                                                <Image
                                                    Aspect="AspectFit"
                                                    HeightRequest="30"
                                                    HorizontalOptions="Center"
                                                    VerticalOptions="Center">
                                                    <Image.Source>
                                                        <FontImageSource
                                                            FontFamily="IonIcons"
                                                            Glyph="{Binding Icon}"
                                                            Size="30"
                                                            Color="{DynamicResource White}" />
                                                    </Image.Source>
                                                </Image>
                                            </Border>

                                            <Label
                                                Grid.Row="1"
                                                FontAttributes="Bold"
                                                FontSize="21"
                                                HorizontalOptions="Start"
                                                Text="{Binding Title}"
                                                TextColor="{DynamicResource White}"
                                                VerticalOptions="Center" />

                                            <Label
                                                Grid.Row="2"
                                                FontSize="13"
                                                HorizontalOptions="Start"
                                                Text="{Binding Body}"
                                                TextColor="{DynamicResource White}"
                                                VerticalOptions="FillAndExpand" />
                                        </Grid>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView
                        x:Name="indicatorView"
                        Margin="0,10"
                        HorizontalOptions="Center"
                        IndicatorColor="{DynamicResource BaseLightTextColor}"
                        IndicatorsShape="Square"
                        SelectedIndicatorColor="{DynamicResource PrimaryColor}" />
                </VerticalStackLayout>
            </Border>

            <Border
                Grid.Row="1"
                Margin="-3,-25,-3,0"
                Padding="{OnIdiom Phone='15,15,15,10',
                                  Tablet='15,10',
                                  Desktop='30,10'}"
                Background="{DynamicResource MainWrapperBackgroundColor}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30,30,0,0" />
                </Border.StrokeShape>

                <CollectionView
                    x:Name="dashboardTiles"
                    Margin="{OnIdiom Phone='10,15,10,10',
                                     Tablet='15,10',
                                     Desktop='30,10'}"
                    x:FieldModifier="public"
                    ItemsSource="{Binding NavigationItems}"
                    SelectionMode="Single">

                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="5"
                            Orientation="Vertical"
                            Span="3"
                            VerticalItemSpacing="5" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <templates:DashboardCarouselItemTemplate />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

        </Grid>
    </views:BasePage.PageContent>

</views:BasePage>