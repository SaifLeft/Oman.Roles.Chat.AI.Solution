<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Mobile.Views.ForgotPasswordPage"
             Title="استعادة كلمة المرور"
             FlowDirection="RightToLeft">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto"
              Padding="20">

            <!-- Header -->
            <StackLayout Grid.Row="0" Spacing="10" Margin="0,20,0,0">
                <Image Source="smart_lawyer_logo.png"
                       HeightRequest="100"
                       HorizontalOptions="Center" />
                <Label Text="استعادة كلمة المرور"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center" />
                <Label Text="أدخل بريدك الإلكتروني لإرسال رمز إعادة تعيين كلمة المرور"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10" />
            </StackLayout>

            <!-- Content -->
            <VerticalStackLayout Grid.Row="1" Spacing="20" Margin="0,10">
                <Frame BorderColor="{StaticResource Gray200}" 
                       Padding="15" 
                       CornerRadius="10"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <!-- Email -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="البريد الإلكتروني" FontSize="16" />
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="أدخل البريد الإلكتروني" 
                                   Keyboard="Email"
                                   ClearButtonVisibility="WhileEditing" />
                        </VerticalStackLayout>

                        <!-- Send Reset Code Button -->
                        <Button x:Name="SendButton" 
                                Text="إرسال رمز التحقق" 
                                Clicked="OnSendResetCodeClicked"
                                CornerRadius="10"
                                HeightRequest="50"
                                Margin="0,10,0,0" />

                        <!-- Loading Indicator -->
                        <ActivityIndicator x:Name="LoadingIndicator" 
                                          IsRunning="False" 
                                          IsVisible="True"
                                          HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Reset Password Section -->
                <Frame x:Name="ResetCodeSection"
                       BorderColor="{StaticResource Gray200}" 
                       Padding="15" 
                       CornerRadius="10"
                       HasShadow="True"
                       IsVisible="False">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="أدخل رمز التحقق وكلمة المرور الجديدة"
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Primary}" />

                        <!-- Reset Code -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="رمز التحقق" FontSize="16" />
                            <Entry x:Name="ResetCodeEntry" 
                                   Placeholder="أدخل رمز التحقق" 
                                   Keyboard="Numeric"
                                   ClearButtonVisibility="WhileEditing" />
                        </VerticalStackLayout>

                        <!-- New Password -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="كلمة المرور الجديدة" FontSize="16" />
                            <Entry x:Name="NewPasswordEntry" 
                                   Placeholder="أدخل كلمة المرور الجديدة" 
                                   IsPassword="True"
                                   ClearButtonVisibility="WhileEditing" />
                        </VerticalStackLayout>

                        <!-- Confirm Password -->
                        <VerticalStackLayout Spacing="5">
                            <Label Text="تأكيد كلمة المرور" FontSize="16" />
                            <Entry x:Name="ConfirmPasswordEntry" 
                                   Placeholder="أعد إدخال كلمة المرور الجديدة" 
                                   IsPassword="True"
                                   ClearButtonVisibility="WhileEditing" />
                        </VerticalStackLayout>

                        <!-- Reset Password Button -->
                        <Button x:Name="ResetButton" 
                                Text="إعادة تعيين كلمة المرور" 
                                Clicked="OnResetPasswordClicked"
                                CornerRadius="10"
                                HeightRequest="50"
                                BackgroundColor="#FF5722"
                                Margin="0,10,0,0" />

                        <!-- Loading Indicator -->
                        <ActivityIndicator x:Name="ResetLoadingIndicator" 
                                          IsRunning="False" 
                                          IsVisible="True"
                                          HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>

            <!-- Back to Login Link -->
            <HorizontalStackLayout Grid.Row="2" 
                                   HorizontalOptions="Center"
                                   Spacing="5"
                                   Margin="0,10,0,20">
                <Label Text="العودة إلى" TextColor="Gray" />
                <Label Text="صفحة تسجيل الدخول"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnBackToLoginTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>